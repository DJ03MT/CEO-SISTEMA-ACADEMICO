<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Panel Estudiantil - Sistema CEO</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/styles/menuestudiante.css">
</head>

<body>
    <div class="dashboard-container">
        <!-- SIDEBAR -->
        <div class="sidebar">
            <div class="user-profile">
                <div class="avatar">
                    <img src="<%= user.photo %>" alt="Foto" class="user-photo">
                </div>
                <div class="user-info">
                    <%= user.name %>
                </div>
                <div class="user-info">
                    <%= user.materia %> - <%= user.grado %>
                </div>
            </div>

            <ul class="nav-links">
                <li>
                    <a href="#" class="nav-link active" data-section="welcome">
                        <i class="fas fa-home"></i>
                        Inicio
                    </a>
                </li>
                <li>
                    <a href="#" class="nav-link" data-section="notas">
                        <i class="fas fa-clipboard-list"></i>
                        Mis Notas
                    </a>
                </li>
                <li>
                    <a href="#" class="nav-link" data-section="estadisticas">
                        <i class="fas fa-chart-bar"></i>
                        Estadísticas
                    </a>
                </li>
                <li>
                    <a href="#" class="nav-link" data-section="perfil">
                        <i class="fas fa-user"></i>
                        Mi Perfil
                    </a>
                </li>
            </ul>

            <div class="logout-section">
                <a href="#" class="logout-btn" id="logoutBtn">
                    <i class="fas fa-sign-out-alt"></i>
                    Cerrar Sesión
                </a>
            </div>
        </div>

        <!-- CONTENIDO PRINCIPAL -->
        <div class="main-content">
            <!-- SECCIÓN DE BIENVENIDA -->
            <div id="welcome" class="content-section active">
                <div class="content-header">
                    <h1>Bienvenida, <%= user.name %></h1>
                    <p>Panel estudiantil - Sistema CEO</p>
                </div>

                <div class="welcome-section">
                    <div class="welcome-icon">
                        <i class="fas fa-user-graduate"></i>
                    </div>
                    <h2 class="welcome-title">¡Bienvenida a tu Panel Estudiantil!</h2>
                    <p class="welcome-subtitle">Aquí puedes consultar tus calificaciones, ver estadísticas de tu
                        rendimiento académico y gestionar tu perfil estudiantil.</p>

                    <div class="stats-grid">
                        <div class="stat-card">
                            <div class="stat-icon">
                                <i class="fas fa-book"></i>
                            </div>
                            <div class="stat-number">8</div>
                            <div class="stat-label">Materias</div>
                        </div>

                        <div class="stat-card">
                            <div class="stat-icon">
                                <i class="fas fa-chart-line"></i>
                            </div>
                            <div class="stat-number">8.7</div>
                            <div class="stat-label">Promedio General</div>
                        </div>

                        <div class="stat-card">
                            <div class="stat-icon">
                                <i class="fas fa-user-check"></i>
                            </div>
                            <div class="stat-number">94%</div>
                            <div class="stat-label">Asistencia</div>
                        </div>

                        <div class="stat-card">
                            <div class="stat-icon">
                                <i class="fas fa-award"></i>
                            </div>
                            <div class="stat-number">3</div>
                            <div class="stat-label">Reconocimientos</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- SECCIÓN DE NOTAS -->
            <div id="notas" class="content-section">
                <div class="content-header">
                    <h1><i class="fas fa-clipboard-list"></i> Mis Calificaciones</h1>
                    <p>Consulta tus notas por materia y período académico</p>
                </div>

                <div class="grades-container">
                    <div class="semester-selector">
                        <button class="semester-btn active">Primer semestre</button>
                        <button class="semester-btn">Segundo semestre</button>
                        <button class="semester-btn">Anual</button>
                    </div>

                    <table class="grades-table">
                        <thead>
                            <tr>
                                <th>Materia</th>
                                <th>Profesor</th>
                                <th>Parcial 1</th>
                                <th>Parcial 2</th>
                                <th>Parcial 3</th>
                                <th>Parcial 4</th>
                                <th>Examen de reparación</th>
                                <th>Nota final</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Matemáticas</td>
                                <td>Prof. Juan Pérez</td>
                                <td>9.2</td>
                                <td>8.8</td>
                                <td>9.5</td>
                                <td>9.1</td>
                                <td>0.0</td>
                                <td><span class="grade-badge grade-excellent">Excelente</span></td>
                            </tr>
                            <tr>
                                <td>Lengua y Literatura</td>
                                <td>Prof. María González</td>
                                <td>8.5</td>
                                <td>8.0</td>
                                <td>9.0</td>
                                <td>8.5</td>
                                <td>0.0</td>
                                <td><span class="grade-badge grade-good">Bueno</span></td>
                            </tr>
                            <tr>
                                <td>Ciencias Naturales</td>
                                <td>Prof. Carlos López</td>
                                <td>7.8</td>
                                <td>8.2</td>
                                <td>8.0</td>
                                <td>8.0</td>
                                <td>0.0</td>
                                <td><span class="grade-badge grade-average">Regular</span></td>
                            </tr>
                            <tr>
                                <td>Historia</td>
                                <td>Prof. Ana Martínez</td>
                                <td>9.0</td>
                                <td>9.2</td>
                                <td>9.4</td>
                                <td>9.2</td>
                                <td>0.0</td>
                                <td><span class="grade-badge grade-excellent">Excelente</span></td>
                            </tr>
                            <tr>
                                <td>Inglés</td>
                                <td>Prof. Laura Smith</td>
                                <td>8.7</td>
                                <td>8.5</td>
                                <td>9.1</td>
                                <td>8.8</td>
                                <td>0.0</td>
                                <td><span class="grade-badge grade-good">Bueno</span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- SECCIÓN DE ESTADÍSTICAS -->
            <div id="estadisticas" class="content-section">
                <div class="content-header">
                    <h1><i class="fas fa-chart-bar"></i> Mis Estadísticas</h1>
                    <p>Visualiza tu rendimiento académico</p>
                </div>

                <div class="charts-container">
                    <div class="chart-card">
                        <div class="chart-title">Promedio por Materia</div>
                        <div class="chart-placeholder">
                            Gráfico de barras - Promedio por Materia
                        </div>
                    </div>

                    <div class="chart-card">
                        <div class="chart-title">Evolución de Calificaciones</div>
                        <div class="chart-placeholder">
                            Gráfico de líneas - Evolución Trimestral
                        </div>
                    </div>

                    <div class="chart-card">
                        <div class="chart-title">Distribución de Calificaciones</div>
                        <div class="chart-placeholder">
                            Gráfico circular - Distribución
                        </div>
                    </div>

                    <div class="chart-card">
                        <div class="chart-title">Comparativa con el Grupo</div>
                        <div class="chart-placeholder">
                            Gráfico comparativo - Rendimiento
                        </div>
                    </div>
                </div>
            </div>

            <!-- SECCIÓN DE PERFIL -->
            <div id="perfil" class="content-section">
                <div class="content-header">
                    <h1><i class="fas fa-user"></i> Mi Perfil</h1>
                    <p>Gestiona tu información personal</p>
                </div>

                <div class="profile-container">
                    <div class="profile-header">
                        <div class="profile-avatar">
                            <i class="fas fa-user-graduate"></i>
                        </div>
                        <div class="profile-info">
                            <h2><%= user.name %></h2>
                            <p>Estudiante - 10° Grado A</p>
                        </div>
                    </div>

                    <div class="profile-details">
                        <div class="detail-group">
                            <div class="detail-label">Carnet</div>
                            <div class="detail-value">2023-0456</div>
                        </div>

                        <div class="detail-group">
                            <div class="detail-label">Fecha de Nacimiento</div>
                            <div class="detail-value">15 de marzo de 2008</div>
                        </div>

                        <div class="detail-group">
                            <div class="detail-label">Correo Electrónico</div>
                            <div class="detail-value"><%= user.email %></div>
                        </div>

                        <div class="detail-group">
                            <div class="detail-label">Teléfono</div>
                            <div class="detail-value"><%= user.telefono %></div>
                        </div>

                        <div class="detail-group">
                            <div class="detail-label">Dirección</div>
                            <div class="detail-value">Managua, Nicaragua</div>
                        </div>

                        <div class="detail-group">
                            <div class="detail-label">Tutor</div>
                            <div class="detail-value">María García López</div>
                        </div>

                        <div class="detail-group">
                            <div class="detail-label">Teléfono del Tutor</div>
                            <div class="detail-value">+505 8888-9999</div>
                        </div>

                        <div class="detail-group">
                            <div class="detail-label">Estado</div>
                            <div class="detail-value">Activo</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Navegación entre secciones
        document.addEventListener('DOMContentLoaded', function () {
            const navLinks = document.querySelectorAll('.nav-link');
            const contentSections = document.querySelectorAll('.content-section');
            const semesterBtns = document.querySelectorAll('.semester-btn');

            // Navegación principal
            navLinks.forEach(link => {
                link.addEventListener('click', function (e) {
                    e.preventDefault();

                    // Remover clase activa de todos los enlaces
                    navLinks.forEach(item => item.classList.remove('active'));

                    // Agregar clase activa al enlace clickeado
                    this.classList.add('active');

                    // Ocultar todas las secciones
                    contentSections.forEach(section => section.classList.remove('active'));

                    // Mostrar la sección correspondiente
                    const sectionId = this.getAttribute('data-section');
                    document.getElementById(sectionId).classList.add('active');
                });
            });

            // Selector de trimestre
            semesterBtns.forEach(btn => {
                btn.addEventListener('click', function () {
                    semesterBtns.forEach(b => b.classList.remove('active'));
                    this.classList.add('active');
                    // Aquí iría la lógica para cargar las notas del trimestre seleccionado
                });
            });

            // Cerrar sesión
            document.getElementById('logoutBtn').addEventListener('click', function (e) {
                e.preventDefault();
                if (confirm('¿Estás seguro de que deseas cerrar sesión?')) {
                    alert('Sesión cerrada correctamente');
                    // Redireccionar al login
                    window.location.href = '/logout';
                }
            });
        });
    </script>
</body>

</html>